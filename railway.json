{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "app": {
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bun install --frozen-lockfile && cd apps/sim && bun run build"
      },
      "deploy": {
        "startCommand": "cd apps/sim && NODE_ENV=production bun run start",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    },
    "realtime": {
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bun install --frozen-lockfile"
      },
      "deploy": {
        "startCommand": "cd apps/sim && NODE_ENV=production bun run socket-server/index.ts",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    }
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production"
      }
    }
  }
}
