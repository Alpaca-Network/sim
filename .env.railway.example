# Railway Environment Variables
# Copy this file to .env and configure for Railway deployment

# Database (automatically provided by Railway PostgreSQL service)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Authentication (Required - generate with: openssl rand -hex 32)
BETTER_AUTH_SECRET=your_32_char_secret_here
BETTER_AUTH_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# NextJS (Required)
NEXT_PUBLIC_APP_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# Security (Required - generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Service Communication (Railway internal networking)
SOCKET_SERVER_URL=http://realtime.railway.internal:3002
NEXT_PUBLIC_SOCKET_URL=${{RAILWAY_PUBLIC_DOMAIN}}/socket.io

# Email Provider (Optional)
# RESEND_API_KEY=your_resend_api_key

# OAuth Providers (Optional)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# AI Providers (Optional)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GROQ_API_KEY=your_groq_api_key

# Local AI Models (Optional - if using Ollama on Railway)
# OLLAMA_URL=http://ollama.railway.internal:11434

# Monitoring and Observability (Optional)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ORG=your_sentry_org
# SENTRY_PROJECT=your_sentry_project
# SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Background Jobs (Optional)
# TRIGGER_API_KEY=your_trigger_dev_api_key
# TRIGGER_API_URL=your_trigger_dev_api_url

# File Storage (Optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_s3_bucket

# Redis (Optional - for caching)
# REDIS_URL=${{Redis.REDIS_URL}}

# Environment
NODE_ENV=production
