{
  "buildCommand": "cd ../.. && bun install && cd apps/sim && bun run build",
  "outputDirectory": "apps/sim/.next",
  "installCommand": "bun install",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/schedules/execute",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/webhooks/poll/gmail",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/webhooks/poll/outlook",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/logs/cleanup",
      "schedule": "0 0 * * *"
    }
  ],
  "functions": {
    "apps/sim/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/socket.io/(.*)",
      "destination": "/api/socket-fallback"
    }
  ]
}
